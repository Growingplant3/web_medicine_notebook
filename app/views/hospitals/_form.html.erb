<%= form_with(model: hospital, local: true) do |form| %>
  <% if hospital.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(hospital.errors.count, "error") %> prohibited this hospital from being saved:</h2>

      <ul>
        <% hospital.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :病院名 %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :郵便番号 %>
    <%= form.text_field :postcode %>
  </div>

  <div class= "field">
    <%= form.label :都道府県 %>
    <%= form.text_field :prefecture_code, collection: JpPrefecture::Prefecture.all, :value_method => :name, include_blank: '都道府県' %><br>
  </div>

  <div class= "field">
    <%= form.label :市町村 %>
    <%= form.text_field :address_city %>
  </div>

  <div class= "field">
    <%= form.label :詳細住所 %>
    <%= form.text_field :address_street %>
  </div>

  <div class= "field">
    <%= form.label :建物名など %>
    <%= form.text_field :address_building %>
  </div>

  <div class="field">
    <%= form.label :電話番号 %>
    <%= form.number_field :telephone_number %>
  </div>

  <!-- using field_for -->
  <div class="field">
    <%= form.label :休診日 %>
    #vacationsを定義　しかしhospitalに格納しないとダメか・・・
    <%#= vacations = Vacation.where(hospital_id, hospital.id) %>
    #vacationsをvacationとして取り出して繰り返す。
    <%# vacations.each do |vacation| %>
    #vacationのフォーム
    #<%= fields_for "vacations[]", vacation do |vf| %>
    #<% end %> #fields_for終わり
    #<% end %>
  </div>

  <div class="field">
    <%= form.label :休診日 %>
    <% %w(日曜日 月曜日 火曜日 水曜日 木曜日 金曜日 土曜日).each.with_index do |vacation, key| %>
      <label>
        <%= check_box_tag 'vacations[]', key, false, id:"hospital_vacations_#{vacation}"%>
        <%= vacation %>
      </label>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :メールアドレス %>
    <%= form.text_field :mail_address %>
  </div>

  <div class="field">
    <a>24時間対応</a>
    <%#= form.label :24時間対応 %>
    <%= form.check_box :twenty_four, {}, "correct", "incorrect" %>
  </div>

  <div class="field">
    <%= form.label :診察開始 %>
    <%= form.text_field :open %>
  </div>

  <div class="field">
    <%= form.label :診察終了 %>
    <%= form.text_field :close %>
  </div>

  <div class="field">
    <%= form.label :急患対応 %>
    <%= form.check_box :emergency, {}, "ok", "ng" %>
  </div>

  <div class="field">
    <%= form.label :備考 %>
    <%= form.text_area :remarks %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>