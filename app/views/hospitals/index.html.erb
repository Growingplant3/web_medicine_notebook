<p id="notice"><%= notice %></p>

<h1>医療機関情報</h1>

<table>
  <thead>
    <tr>
      <th>病院名</th>
      <th>住所</th>
      <th>電話番号</th>
      <th>メールアドレス</th>
      <th>休診日</th>
      <th>診察開始</th>
      <th>診察終了</th>
      <th>急患対応</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.name %></td>
        <td><%= hospital.address %></td>
        <td><%= hospital.telephone_number %></td>
        <td><%= hospital.mail_address %></td>
        <td><%= hospital.holiday_i18n %></td>
        <td><%= hospital.open.strftime("%H:%M") %></td>
        <td><%= hospital.close.strftime("%H:%M") %></td>
        <td><%= hospital.emergency_i18n %></td>
        <td><%= hospital.remarks %></td>
        <td><%= link_to '表示する', hospital %></td>
        <td><%= link_to '変更する', edit_hospital_path(hospital) %></td>
        <td><%= link_to '削除する', hospital, method: :delete, data: { confirm: '本当に削除しても良いですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

