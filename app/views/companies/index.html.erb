<p id="notice"><%= notice %></p>

<h1>医療機関情報</h1>

<table>
  <thead>
    <tr>
      <th>病院名</th>
      <th>住所</th>
      <th>電話番号</th>
      <th>メールアドレス</th>
      <th>休診日</th>
      <th>診察開始</th>
      <th>診察終了</th>
      <th>急患対応</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  require 'date'
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.address %></td>
        <td><%= company.telephone_number %></td>
        <td><%= company.mail_address %></td>
        <td><%= company.holiday_i18n %></td>
        <td><%= company.open.strftime("%H時%M分") ></td>
        <td><%= company.close.strftime("%H時%M分") ></td>
        <td><%= company.emergency_i18n %></td>
        <td><%= company.remarks %></td>
        <td><%= link_to '表示する', company %></td>
        <td><%= link_to '変更する', edit_company_path(company) %></td>
        <td><%= link_to '削除する', company, method: :delete, data: { confirm: '本当に削除しても良いですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

